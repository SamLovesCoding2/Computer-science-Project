package ScifiGame;

import java.awt.event.MouseEvent;
import java.awt.event.MouseListener;



public class MouseInput implements MouseListener {

	private Handler handler;
	private float delX;
	private float delY;
	private float newX;
	private float newY;
	private GameObject player;
	private float velo = 3;

	public MouseInput(Handler handler) {
		this.handler = handler;
		for(int i = 0; i< handler.object.size(); i++)
		{// to get the ID of the current player
			if(handler.object.get(i).getId() == ID.PlayerBullet) player = handler.object.get(i);
		}

	}

	public void mouseClicked(MouseEvent e) {
		newX = e.getLocationOnScreen().x;
		newY = e.getLocationOnScreen().y;
		
		
		//float slope = (newY - player.getY())/(newX - player.getX());
		float slope = newY/newX;
		float angle = (float) Math.atan(slope);
//		double angle = Math.atan2(newY - player.getY(), newX - player.getX());
		delX = (float) (velo * Math.cos(angle));
		delY = (float) (velo * Math.sin(angle));
		for(int i = 0; i< handler.object.size(); i++)
		{// to get the ID of the current player
			if(handler.object.get(i).getId() == ID.PlayerBullet) 	handler.addObject(new PlayerBullet((int) player.getX() + 10, (int) player.getY() + 10, delX, delY, ID.PlayerBullet, handler));
		}

	}

	@Override
	public void mouseEntered(MouseEvent e) {
		// TODO Auto-generated method stub

	}

	@Override
	public void mouseExited(MouseEvent e) {
		// TODO Auto-generated method stub

	}

	@Override
	public void mousePressed(MouseEvent e) {
		newX = e.getLocationOnScreen().x;
		newY = e.getLocationOnScreen().y;
		
		
		//float slope = (newY - player.getY())/(newX - player.getX());
		float slope = newY/newX;
		float angle = (float) Math.atan(slope);
//		double angle = Math.atan2(newY - player.getY(), newX - player.getX());
		delX = (float) (velo * Math.cos(angle));
		delY = (float) (velo * Math.sin(angle));
		for(int i = 0; i< handler.object.size(); i++)
		{// to get the ID of the current player
			if(handler.object.get(i).getId() == ID.PlayerBullet) 	handler.addObject(new PlayerBullet((int) player.getX() + 10, (int) player.getY() + 10, delX, delY, ID.PlayerBullet, handler));
		}
	

	}

	@Override
	public void mouseReleased(MouseEvent e) {

	}

}

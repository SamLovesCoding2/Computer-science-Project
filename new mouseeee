//				curX = (int) tempObject.getX();
//				curY = (int) tempObject.getY();
//			}
//		}
		
		
		float slope = (newY - player.getY())/(newX - player.getX());
		float angle = (float) Math.atan(slope);
		delX = (float) (velo * Math.cos(angle));
		delY = (float) (velo * Math.sin(angle));
		PlayerBullet p = new PlayerBullet((int) player.getX() + 10, (int) player.getY() + 10, delX, delY, ID.PlayerBullet, handler);
		

//		for (int i = 0; i < handler.object.size(); i++) {
//			if (handler.object.get(i).getId() == ID.Player)
//				player = handler.object.get(i);
//		}

		
		handler.addObject(p);
//		for (int i = 0; i < handler.object.size(); i++) {
//
//			GameObject tempObject = handler.object.get(i);
//
//			if (tempObject.getId() == ID.PlayerBullet) {
//				tempObject.setX(curX + delX);
//				tempObject.setY(curY + delY);
////				for (int j = curX; j <= newX; j++) {
////					tempObject.setX(j);
////				}
//			}
//
//		}
	}


package ScifiGame;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Rectangle;
import java.util.Random;

public class PlayerBullet extends GameObject {
	private Handler handler;
	private int curX;
	private int curY;

	private float deltaX;
	private float deltaY;

	public PlayerBullet(int curX, int curY, float delX, float delY, ID id, Handler handler) {
		super(curX, curY, id);
		this.handler = handler;

		this.curX = curX;
		this.curY = curY;
		
		this.deltaX = delX;
		this.deltaY = delY;
		

	}

	public Rectangle getBounds() {
		return new Rectangle((int) x, (int) y, 5, 5);

	}

	public void tick() {

		MouseInput i = new MouseInput(handler);
		this.curX += deltaX;
		this.curY += deltaY;


	//	handler.addObject(new PlayerBullet((int) x + 10, (int) y + 10, ID.PlayerBullet, handler));

//	if(y <= 0|| y >= Game.HEIGHT - 32) velY *= -1;
//		if (x <= 0 || x >= Game.WIDTH - 96)
//			velX *= -1;

		// handler.addObject(new Trail(x, y, ID.Trail, Color.red, 96, 96, handler,
		// 0.009f));
	}
	public int getvelX()
	{
		return (int) velX;
	}
	public int getvelY()
	{
		return (int) velY;
	}

	public void render(Graphics g) {
		g.setColor(Color.BLACK);
//		for (int x = curX; x <= newX; x++)
//		{
//			deltaX = x;
//		}
//		
//		for (int y = curY; y <= newY; y++)
//		{
//			deltaY = y;
//		}
//		
//		g.fillRect(deltaX,deltaY, 16, 16);
		g.fillRect((int)x,(int)y,16,16);
	}
}
